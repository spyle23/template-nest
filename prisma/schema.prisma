// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

enum Entity {
  USER
  TICKET
}

enum TicketType {
  UNIQUE
  JOUR
  SEMAINE
  MOIS
}

model Auth {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  User     User?
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  adress       String
  isAdmin      Boolean
  notification Notification[]
  ticket       Ticket[]
  auth         Auth           @relation(fields: [authId], references: [id])
  authId       Int            @unique
}

model Ticket {
  id           Int            @id @default(autoincrement())
  name         String
  description  String
  price        Float
  isReservate  Boolean
  isAvalable   Boolean
  notification Notification[]
  ticketType   TicketType
  User         User?          @relation(fields: [userId], references: [id])
  userId       Int?
  Bus          Bus?           @relation(fields: [busId], references: [id])
  busId        Int?
  qrCode       QrCode         @relation(fields: [qrCodeId], references: [id])
  qrCodeId     Int            @unique
}

model Notification {
  id      Int     @id @default(autoincrement())
  isAdmin Boolean
  entity  Entity

  User     User?   @relation(fields: [userId], references: [id])
  userId   Int?
  Ticket   Ticket? @relation(fields: [ticketId], references: [id])
  ticketId Int?
}

model QrCode {
  id        Int      @id @default(autoincrement())
  qrPath    String
  startDate DateTime @default(now())
  endDate   DateTime
  Ticket    Ticket?
}

model Bus {
  id            Int      @id @default(autoincrement())
  nbReservation Int
  nbPlace       Int
  latitude      Float
  longitude     Float
  target        Target[]
  ticket        Ticket[]
}

model Target {
  id        Int    @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  Bus       Bus?   @relation(fields: [busId], references: [id])
  busId     Int?
}
